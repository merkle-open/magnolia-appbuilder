<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
    <name>magnolia-appbuilder</name>
    <displayName>Magnolia Appbuilder</displayName>
    <description>The AppBuilder is a builder for Magnolia apps using java code.</description>
    <class>com.namics.oss.magnolia.appbuilder.AppBuilderModule</class>
    <version>${project.version}</version>

    <components>
        <id>admincentral</id>
        <component>
            <type>com.namics.oss.magnolia.appbuilder.action.edit.clipboard.JcrContentClipboard</type>
            <implementation>com.namics.oss.magnolia.appbuilder.action.edit.clipboard.NodeTypeConstraintAwareJcrContentClipboard</implementation>
        </component>
    </components>
    <components>
        <id>main</id>
        <configurer>
            <class>com.namics.oss.magnolia.appbuilder.configuration.AppBuilderGuiceComponentConfigurer</class>
        </configurer>
    </components>

    <dependencies>
        <dependency>
            <name>core</name>
            <version>*</version>
        </dependency>
        <dependency>
            <name>rendering</name>
            <version>*</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <name>ui-contentapp</name>
            <version>*</version>
        </dependency>
    </dependencies>
</module>
